    <link rel="stylesheet" href="@Url.Content("~/css/adminCat.css")" />

    <style>
        .row1 {
            margin-left: 10px;
        }
    </style>


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
