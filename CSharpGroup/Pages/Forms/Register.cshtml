@page  "{providerId}"
@{
    Layout = "_Layout2";
}
@model CSharpGroup.Pages.Forms.RegisterModel
@{
    ViewData["Title"] = "Sign Up";
}
<div>
    <h3 style="padding-bottom:10px;">  <a asp-page="/Forms/Login" asp-route-providerId="@Model.providerId">Login</a>      |      SignUp  </h3>
    <form method="post" id="val7">
        <div><p style="color: red">@Html.ValidationMessage("email")</p></div>
        <div class="form-group" id="val1">
            <label asp-for="user.Email"></label>
            <input id="in1" asp-for="user.Email" class="form-control" type="email" required />
            <div class="valid-feedback">Valid</div>
            <div class="invalid-feedback">Please fill out this field</div>
        </div>
        <div class="form-group" id="val2">
            <label asp-for="user.FirstName"></label>
            <input id="in2" asp-for="user.FirstName" class="form-control" type="text" required />
            <div class="valid-feedback">Valid</div>
            <div class="invalid-feedback">Please fill out this field</div>
        </div>
        <div class="form-group" id="val3">
            <label asp-for="user.LastName"></label>
            <input id="in3" asp-for="user.LastName" class="form-control" type="text" required />
            <div class="valid-feedback">Valid</div>
            <div class="invalid-feedback">Please fill out this field</div>
        </div>
        <div class="form-group" id="val4">
            <label asp-for="user.Password"></label>
            <input id="in4" asp-for="user.Password" class="form-control" type="password" minlength="8" required />
            <div class="valid-feedback">Valid</div>
            <div class="invalid-feedback">Passwords must be atleast 8 characters long.</div>
        </div>
        <div class="form-group" id="val5">
            <label asp-for="user.ConfirmPassword"></label>
            <input id="in5" asp-for="user.ConfirmPassword" class="form-control" type="password" minlength="8" required />
            <span id="message"></span>
        </div>
        <div class="form-group" id="val6">
            <label asp-for="user.PhoneNo"></label>
            <input id="in6" asp-for="user.PhoneNo" class="form-control" type="number" required />
            <div class="valid-feedback">Valid</div>
            <div class="invalid-feedback">Invalid phone number format.</div>
        </div>
        <div class="form-group" id="val8">
            <label asp-for="user.Address"></label><br />
            <select asp-for="user.Address" id="in8" class=" form-control" title="city residence" data-live-search="true" required>
                <option></option>
                <option>Addis Ababa</option>
                <option>Dire Dawa</option>
                <option>Bahir Dar</option>
                <option>Hawassa</option>
                <option>Gondar</option>
                <option>Adama</option>
            </select>
        </div>
        <button type="submit" class="btn btn-block send-button button1 ">Sign Up</button>
    </form>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $('#in1').mouseup(function () {
        $('#val1').addClass("was-validated");
    });
    $('#in2').mouseup(function () {
        $('#val2').addClass("was-validated");
    });
    $('#in3').mouseup(function () {
        $('#val3').addClass("was-validated");
    });
    $('#in4').mouseup(function () {
        $('#val4').addClass("was-validated");
    });
    $('#in5').on('keyup', function () {
        if ($('#in4').val() == $('#in5').val()) {
            $('#in5').html('Valid').css('border-color', 'green').css('box-shadow', 'none');;
            $('#message').html('Valid').css('color', 'green').css('font-size', '14px');
        } else {
            $('#in5').html('Valid').css('border-color', 'red').css('box-shadow', 'none');
            $('#message').html('Passwords do not match').css('color', 'red').css('font-size', '14px');;
        }
    });
    $('#in6').mouseup(function () {
        $('#val6').addClass("was-validated");
    });
    $('#in8').mouseup(function () {
        $('#val8').addClass("was-validated");
    });
    $('.button1').click(function () {
        $('#val7').addClass("was-validated");
    });
</script>