@page
@model CSharpGroup.Pages.Forms.LoginModel
@{
}

<div>
    @Html.ValidationMessage("Email")
    <form method="post">
        <div class="form-group">
            <label asp-for="user.Email"></label>
            <input asp-for="user.Email" class="form-control" name="email">
            <span asp-validation-for="user.Email"></span>
        </div>
        @Html.ValidationMessage("Password")
        <div class="form-group">
            <label asp-for="user.Password"></label>
            <input asp-for="user.Password" class="form-control" name="password">
            <span asp-validation-for="user.Password"></span>
        </div>

        <button type="submit">Submit</button>
    </form>
</div>
