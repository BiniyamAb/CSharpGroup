<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CSharpGroup</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <a class="navbar-brand logo" asp-area="" asp-page="/Index">Service Provider</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link links" asp-area="" asp-page="/About" style="color: #735798">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link links" asp-area="" asp-page="/Services" style="color: #735798">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link links" asp-area="" asp-page="/Contact" style="color: #735798">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link links" asp-area="" asp-page="/Register" style="color: #735798">Signup/Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-secondary providerbtn" asp-area="" asp-page="/BecomeaProvider">Become a Provider</a>
                    </li>
                </ul>

            </div>

        </nav>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - CSharpGroup - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
